{
  "manifest_version": 3,
  "name": "Shiftclip ",
  "description": "Shiftclip",
  "permissions": ["clipboardRead", "clipboardWrite", "storage"],
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "./icon16.png",
      "32": "./icon32.png",
      "48": "./icon48.png",
      "128": "./icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Shiftclip"
  }
}
